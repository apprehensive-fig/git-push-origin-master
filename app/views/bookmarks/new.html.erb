<div id="new-container" class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="rounded p-3 border border-dark text-center text-lowercase">
        <h3>add new movie</h3>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, prompt: 'select a movie', inline_label: 'movie', label: false, input_html: { class: 'select2' } %>
          <%= f.input :comment, placeholder: 'comment' inline_label: 'comment', label: false %>
          <%= f.submit class: 'btn btn-flat border border-dark mb-3 mt-3' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
