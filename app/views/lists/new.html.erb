<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white border border-dark text-center text-lowercase">
        <h3>new list</h3></br>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'ex) comedy' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat border border-dark mb-3 mt-3' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
